<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Lounge — ChiffTown</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700;900&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        *, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }
        :root {
            --lounge-dark: #0f0d1a;
            --lounge-deep: #1e1b4b;
            --lounge-mid: #312e81;
            --lounge-purple: #a78bfa;
            --lounge-lavender: #c4b5fd;
            --lounge-text: #f5f3ff;
            --lounge-text-dim: rgba(245, 243, 255, 0.55);
        }
        html { scroll-behavior: smooth; }
        body { font-family: 'Inter', sans-serif; background: var(--lounge-dark); color: var(--lounge-text); overflow-x: hidden; min-height: 100vh; }
        .container { max-width: 1200px; margin: 0 auto; padding: 0 2rem; }
        
        .navbar { position: fixed; top: 0; left: 0; right: 0; z-index: 1000; padding: 0.75rem 0; background: rgba(15,13,26,0.9); backdrop-filter: blur(20px); border-bottom: 1px solid rgba(167,139,250,0.1); }
        .nav-container { max-width: 1200px; margin: 0 auto; padding: 0 2rem; display: flex; justify-content: space-between; align-items: center; }
        .nav-logo { display: flex; align-items: center; gap: 0.75rem; text-decoration: none; color: var(--lounge-text); }
        .nav-logo i { font-size: 1.3rem; color: var(--lounge-purple); }
        .nav-logo span { font-family: 'Playfair Display', serif; font-size: 1.3rem; font-weight: 700; }
        .nav-links { display: flex; gap: 0.5rem; }
        .nav-links a { color: var(--lounge-text-dim); text-decoration: none; font-size: 0.88rem; font-weight: 500; padding: 0.4rem 0.8rem; border-radius: 8px; transition: all 0.2s ease; }
        .nav-links a:hover { color: var(--lounge-text); background: rgba(167,139,250,0.1); }
        
        .back-btn { position: fixed; top: 80px; left: 1.5rem; background: rgba(15,13,26,0.9); backdrop-filter: blur(10px); border: 1px solid rgba(167,139,250,0.2); color: var(--lounge-purple); padding: 0.6rem 1rem; border-radius: 50px; cursor: pointer; z-index: 999; transition: all 0.3s ease; font-size: 0.85rem; display: flex; align-items: center; gap: 0.4rem; }
        .back-btn:hover { background: rgba(167,139,250,0.1); transform: translateX(-3px); }
        
        .lounge-hero {
            min-height: 65vh; display: flex; align-items: center; justify-content: center; text-align: center;
            position: relative; overflow: hidden;
            background: linear-gradient(180deg, #0f0d1a 0%, #1e1b4b 35%, #312e81 55%, #3730a3 70%, #1e1b4b 85%, #0f0d1a 100%);
        }
        
        /* Soft floating orbs */
        .ambient-orbs { position: absolute; inset: 0; pointer-events: none; }
        .ambient-orb {
            position: absolute; border-radius: 50%; filter: blur(80px);
            animation: orbDrift 12s ease-in-out infinite;
        }
        .ambient-orb:nth-child(1) { width: 400px; height: 400px; background: rgba(167,139,250,0.08); top: 5%; left: 15%; animation-delay: 0s; }
        .ambient-orb:nth-child(2) { width: 300px; height: 300px; background: rgba(196,181,253,0.06); bottom: 10%; right: 20%; animation-delay: -4s; }
        .ambient-orb:nth-child(3) { width: 250px; height: 250px; background: rgba(139,92,246,0.07); top: 40%; right: 10%; animation-delay: -8s; }
        
        @keyframes orbDrift {
            0%, 100% { transform: translate(0, 0); }
            33% { transform: translate(20px, -15px); }
            66% { transform: translate(-15px, 20px); }
        }
        
        .lounge-content { position: relative; z-index: 5; max-width: 650px; padding: 0 2rem; }
        
        .lounge-badge {
            display: inline-flex; align-items: center; gap: 0.5rem;
            background: rgba(167,139,250,0.1); border: 1px solid rgba(167,139,250,0.2);
            padding: 0.4rem 1rem; border-radius: 50px;
            font-size: 0.8rem; font-weight: 600; color: var(--lounge-lavender); margin-bottom: 1.25rem;
        }
        
        .lounge-title {
            font-family: 'Playfair Display', serif;
            font-size: clamp(2.5rem, 6vw, 4rem); font-weight: 900;
            margin-bottom: 0.75rem; line-height: 1.1;
        }
        
        .lounge-subtitle { font-size: 1.15rem; color: var(--lounge-text-dim); margin-bottom: 2rem; line-height: 1.6; }
        
        .lounge-actions { display: flex; gap: 0.75rem; justify-content: center; flex-wrap: wrap; }
        .lounge-btn {
            background: linear-gradient(135deg, var(--lounge-purple), #7c3aed); color: #fff; border: none;
            padding: 0.85rem 1.8rem; border-radius: 50px; font-weight: 600; font-size: 1rem;
            cursor: pointer; transition: all 0.3s ease; display: flex; align-items: center; gap: 0.6rem;
            font-family: inherit; box-shadow: 0 4px 15px rgba(167,139,250,0.3);
        }
        .lounge-btn:hover { transform: translateY(-2px); box-shadow: 0 6px 25px rgba(167,139,250,0.4); }
        .lounge-btn.secondary { background: rgba(255,255,255,0.05); border: 1px solid rgba(167,139,250,0.2); box-shadow: none; }
        .lounge-btn.secondary:hover { background: rgba(167,139,250,0.1); }
        
        .lounge-section { padding: 4rem 0; background: var(--lounge-dark); position: relative; z-index: 1; }
        .stats-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.25rem; margin-bottom: 3rem; }
        .stat-card { background: rgba(255,255,255,0.02); border: 1px solid rgba(167,139,250,0.08); padding: 1.5rem; border-radius: 16px; text-align: center; transition: all 0.3s ease; }
        .stat-card:hover { background: rgba(167,139,250,0.04); transform: translateY(-3px); }
        .stat-card i { font-size: 1.8rem; color: var(--lounge-purple); margin-bottom: 0.75rem; }
        .stat-number { font-size: 1.8rem; font-weight: 700; font-family: 'Playfair Display', serif; margin-bottom: 0.25rem; }
        .stat-label { color: var(--lounge-text-dim); font-size: 0.85rem; }
        .section-header { margin-bottom: 2rem; }
        .section-header h2 { font-family: 'Playfair Display', serif; font-size: 1.8rem; margin-bottom: 0.5rem; }
        .section-header p { color: var(--lounge-text-dim); font-size: 0.95rem; }
        
        .rooms-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 1.25rem; }
        .room-card { background: rgba(255,255,255,0.02); border: 1px solid rgba(167,139,250,0.08); border-radius: 16px; padding: 1.5rem; cursor: pointer; transition: all 0.3s ease; }
        .room-card:hover { background: rgba(167,139,250,0.04); border-color: rgba(167,139,250,0.2); transform: translateY(-4px); }
        .room-card-header { display: flex; align-items: center; gap: 0.75rem; margin-bottom: 0.75rem; }
        .room-card-icon { width: 44px; height: 44px; background: linear-gradient(135deg, var(--lounge-purple), #7c3aed); border-radius: 12px; display: flex; align-items: center; justify-content: center; color: white; font-size: 1.2rem; }
        .room-card-title { font-family: 'Playfair Display', serif; font-size: 1.1rem; font-weight: 600; }
        .room-card-description { color: var(--lounge-text-dim); font-size: 0.88rem; margin-bottom: 1rem; line-height: 1.5; }
        .room-card-stats { display: flex; justify-content: space-between; padding-top: 0.75rem; border-top: 1px solid rgba(255,255,255,0.04); }
        .room-card-stat { display: flex; align-items: center; gap: 0.4rem; color: var(--lounge-text-dim); font-size: 0.82rem; }
        .room-card-stat .fa-circle.live { color: #4ade80; }
        
        .empty-state { text-align: center; padding: 4rem 2rem; }
        .empty-state i { font-size: 3rem; color: var(--lounge-purple); margin-bottom: 1rem; opacity: 0.6; }
        .empty-state h3 { font-family: 'Playfair Display', serif; font-size: 1.4rem; margin-bottom: 0.75rem; }
        .empty-state p { color: var(--lounge-text-dim); margin-bottom: 1.5rem; max-width: 400px; margin-left: auto; margin-right: auto; }
        
        .footer { background: rgba(8,6,15,0.95); border-top: 1px solid rgba(167,139,250,0.06); padding: 3rem 0 1.25rem; }
        .footer-content { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; margin-bottom: 2rem; }
        .footer-section h3 { font-family: 'Playfair Display', serif; margin-bottom: 0.75rem; font-size: 1.1rem; }
        .footer-section p, .footer-section a { color: var(--lounge-text-dim); font-size: 0.88rem; text-decoration: none; }
        .footer-section ul { list-style: none; }
        .footer-section li { margin-bottom: 0.4rem; }
        .footer-section a:hover { color: var(--lounge-purple); }
        .social-links { display: flex; gap: 0.5rem; }
        .social-links a { width: 36px; height: 36px; border-radius: 10px; background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.05); display: flex; align-items: center; justify-content: center; color: var(--lounge-text-dim); transition: all 0.3s ease; }
        .social-links a:hover { background: rgba(167,139,250,0.1); color: var(--lounge-purple); }
        .footer-bottom { text-align: center; padding-top: 1.25rem; border-top: 1px solid rgba(255,255,255,0.04); }
        .footer-bottom p { color: rgba(245,243,255,0.3); font-size: 0.8rem; }
        
        @media (max-width: 768px) {
            .lounge-title { font-size: 2.5rem; }
            .lounge-actions { flex-direction: column; align-items: center; }
            .stats-grid { grid-template-columns: 1fr; }
            .rooms-grid { grid-template-columns: 1fr; }
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <a href="index.html" class="nav-logo"><i class="fas fa-city"></i><span>ChiffTown</span></a>
            <div class="nav-links"><a href="index.html">Home</a></div>
        </div>
    </nav>
    <button class="back-btn" onclick="window.location.href='index.html'"><i class="fas fa-arrow-left"></i> Town Centre</button>

    <section class="lounge-hero">
        <div class="ambient-orbs">
            <div class="ambient-orb"></div>
            <div class="ambient-orb"></div>
            <div class="ambient-orb"></div>
        </div>
        <div class="lounge-content">
            <div class="lounge-badge"><i class="fas fa-glass-martini-alt"></i><span>Sophisticated Vibes</span></div>
            <h1 class="lounge-title">The Lounge</h1>
            <p class="lounge-subtitle">Refined conversation, smooth ambiance. For the moments that call for something more civilised.</p>
            <div class="lounge-actions">
                <button class="lounge-btn" onclick="createRoom()"><i class="fas fa-plus"></i> Open a Room</button>
                <button class="lounge-btn secondary" onclick="refreshRooms()"><i class="fas fa-sync-alt"></i> Refresh</button>
            </div>
        </div>
    </section>

    <section class="lounge-section">
        <div class="container">
            <div class="stats-grid">
                <div class="stat-card"><i class="fas fa-users"></i><div class="stat-number" id="totalUsers">0</div><div class="stat-label">Guests</div></div>
                <div class="stat-card"><i class="fas fa-couch"></i><div class="stat-number" id="activeRooms">0</div><div class="stat-label">Active Rooms</div></div>
                <div class="stat-card"><i class="fas fa-broadcast-tower"></i><div class="stat-number" id="liveStreams">0</div><div class="stat-label">Live Now</div></div>
            </div>
            <div class="section-header">
                <h2>Open Rooms</h2>
                <p>Find your corner of the lounge or create your own space</p>
            </div>
            <div id="roomsList" class="rooms-grid"></div>
            <div id="noRooms" class="empty-state">
                <i class="fas fa-couch"></i>
                <h3>The Lounge is Awaiting</h3>
                <p>Be the first to settle in. Open a room and set the mood.</p>
                <button class="lounge-btn" onclick="createRoom()"><i class="fas fa-plus"></i> Open a Room</button>
            </div>
        </div>
    </section>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section"><h3>The Lounge</h3><p>ChiffTown's space for civilised chiff-chaff.</p></div>
                <div class="footer-section"><h3>Features</h3><ul><li><a href="#">Video Chat</a></li><li><a href="#">Private Rooms</a></li><li><a href="#">Chill Mode</a></li></ul></div>
                <div class="footer-section"><h3>Connect</h3><div class="social-links"><a href="#"><i class="fab fa-twitter"></i></a><a href="#"><i class="fab fa-discord"></i></a></div></div>
            </div>
            <div class="footer-bottom"><p>&copy; 2025 ChiffTown — The Lounge</p></div>
        </div>
    </footer>

    <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
    <script>
        let socket=null,pendingHost=null;
        function createRoom(){const u=prompt('Your name?');if(!u?.trim())return;pendingHost=u.trim();if(socket)socket.emit('create-room',{name:`${u}'s Corner`,description:'Pull up a chair, get comfy.',maxParticipants:10,isPrivate:false,type:'lounge'});else window.location.href=`pub-stream.html?v=${Date.now()}&room=${Math.random().toString(36).substring(2,8).toUpperCase()}&username=${encodeURIComponent(u.trim())}&host=1`;}
        function refreshRooms(){if(socket)socket.emit('get-room-list');}
        function joinRoom(id){const u=prompt('Your name?');if(!u?.trim())return;window.location.href=`pub-stream.html?v=${Date.now()}&room=${id}&username=${encodeURIComponent(u.trim())}&host=0`;}
        function escapeHtml(t){const d=document.createElement('div');d.textContent=t;return d.innerHTML;}
        function init(){const url=['localhost','127.0.0.1'].includes(location.hostname)?'http://localhost:3000':location.origin;socket=io(url,{transports:['websocket','polling'],timeout:5000,forceNew:true});socket.on('connect',()=>socket.emit('get-room-list'));socket.on('room-list',d=>{const filtered=d.rooms.filter(r=>r.type==='lounge');updateList(filtered);updateStats(d.stats);});socket.on('room-created',r=>{const u=pendingHost||'Host';pendingHost=null;setTimeout(()=>window.location.href=`pub-stream.html?v=${Date.now()}&room=${r.id}&username=${encodeURIComponent(u)}&host=1`,400);});socket.on('room-updated',()=>socket.emit('get-room-list'));}
        function updateList(rooms){const l=document.getElementById('roomsList'),e=document.getElementById('noRooms');if(!rooms.length){l.style.display='none';e.style.display='block';return;}l.style.display='grid';e.style.display='none';l.innerHTML=rooms.map(r=>`<div class="room-card" onclick="joinRoom('${r.id}')"><div class="room-card-header"><div class="room-card-icon"><i class="fas fa-couch"></i></div><h3 class="room-card-title">${escapeHtml(r.name)}</h3></div><p class="room-card-description">${escapeHtml(r.description)}</p><div class="room-card-stats"><div class="room-card-stat"><i class="fas fa-users"></i> ${r.participantCount}/${r.maxParticipants}</div><div class="room-card-stat"><i class="fas fa-circle ${r.hasStreamer?'live':'offline'}"></i> ${r.hasStreamer?'Live':'Waiting'}</div></div></div>`).join('');}
        function updateStats(s){document.getElementById('totalUsers').textContent=s.totalUsers||0;document.getElementById('activeRooms').textContent=s.activeRooms||0;document.getElementById('liveStreams').textContent=s.liveStreams||0;}
        document.addEventListener('DOMContentLoaded',init);
    </script>
</body>
</html>
