    <!-- Venues Section — Town Map -->
    <section id="venues" class="venues-section">
        <div class="container">
            <div class="section-header">
                <span class="section-badge"><i class="fas fa-map-pin"></i> Town Directory</span>
                <h2 class="section-title">Pick Your Venue</h2>
                <p class="section-desc">Each spot in town has its own character. Where do you fancy tonight?</p>
            </div>

            <div class="venues-grid">
                <!-- Tavern -->
                <div class="venue-card tavern" data-href="pub.html">
                    <div class="venue-bg"></div>
                    <div class="venue-glow"></div>
                    <div class="venue-content">
                        <div class="venue-icon-wrap">
                            <div class="venue-icon">
                                <i class="fas fa-beer-mug-empty"></i>
                            </div>
                            <div class="venue-flame flame-1"></div>
                            <div class="venue-flame flame-2"></div>
                        </div>
                        <h3 class="venue-name">The Tavern</h3>
                        <p class="venue-desc">Warm ales, flickering candles, and great conversation around the hearth.</p>
                        <div class="venue-footer">
                            <div class="venue-status">
                                <span class="status-dot"></span>
                                <span>Open</span>
                            </div>
                            <div class="venue-enter">
                                Enter <i class="fas fa-arrow-right"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Night Club -->
                <div class="venue-card nightclub" data-href="nightclub.html">
                    <div class="venue-bg"></div>
                    <div class="venue-glow"></div>
                    <div class="neon-lines">
                        <div class="neon-line"></div>
                        <div class="neon-line"></div>
                        <div class="neon-line"></div>
                    </div>
                    <div class="venue-content">
                        <div class="venue-icon-wrap">
                            <div class="venue-icon">
                                <i class="fas fa-music"></i>
                            </div>
                        </div>
                        <h3 class="venue-name">Night Club</h3>
                        <p class="venue-desc">Neon lights, pulsing beats, and electric energy all night long.</p>
                        <div class="venue-footer">
                            <div class="venue-status">
                                <span class="status-dot"></span>
                                <span>Open</span>
                            </div>
                            <div class="venue-enter">
                                Enter <i class="fas fa-arrow-right"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cinema -->
                <div class="venue-card cinema" data-href="cinema.html">
                    <div class="venue-bg"></div>
                    <div class="venue-glow"></div>
                    <div class="venue-content">
                        <div class="venue-icon-wrap">
                            <div class="venue-icon">
                                <i class="fas fa-film"></i>
                            </div>
                        </div>
                        <h3 class="venue-name">The Cinema</h3>
                        <p class="venue-desc">Watch together, laugh together. Live streaming and shared screens.</p>
                        <div class="venue-footer">
                            <div class="venue-status">
                                <span class="status-dot"></span>
                                <span>Open</span>
                            </div>
                            <div class="venue-enter">
                                Enter <i class="fas fa-arrow-right"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Games Room -->
                <div class="venue-card games" data-href="games.html">
                    <div class="venue-bg"></div>
                    <div class="venue-glow"></div>
                    <div class="venue-content">
                        <div class="venue-icon-wrap">
                            <div class="venue-icon">
                                <i class="fas fa-gamepad"></i>
                            </div>
                        </div>
                        <h3 class="venue-name">Arcade</h3>
                        <p class="venue-desc">Challenge friends, compete, and game on in the retro arcade.</p>
                        <div class="venue-footer">
                            <div class="venue-status">
                                <span class="status-dot"></span>
                                <span>Open</span>
                            </div>
                            <div class="venue-enter">
                                Enter <i class="fas fa-arrow-right"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Lounge -->
                <div class="venue-card lounge" data-href="lounge.html">
                    <div class="venue-bg"></div>
                    <div class="venue-glow"></div>
                    <div class="venue-content">
                        <div class="venue-icon-wrap">
                            <div class="venue-icon">
                                <i class="fas fa-couch"></i>
                            </div>
                        </div>
                        <h3 class="venue-name">The Lounge</h3>
                        <p class="venue-desc">Civilised chiff-chaff, smooth vibes, and sophisticated company.</p>
                        <div class="venue-footer">
                            <div class="venue-status">
                                <span class="status-dot"></span>
                                <span>Open</span>
                            </div>
